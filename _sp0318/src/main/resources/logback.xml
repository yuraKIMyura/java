<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %5p %c{2} - %m%n</pattern>
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="stdout" />
	</root>

	<logger name="org.springframework.jdbc" level="DEBUG" />
</configuration>



<!-- logging framework for Spring -->

<!-- Logging is essential for monitoring and troubleshooting applications, 
as it provides valuable information about what the application is doing, 
as well as any errors or unexpected behavior encountered during runtime. -->

